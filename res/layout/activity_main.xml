<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.calcolatrice.MainActivity" >

    <EditText
        android:id="@+id/numero1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="" />

    <EditText
            android:id="@+id/numero2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/numero1"
            android:layout_alignBottom="@+id/numero1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="28dp"
            android:text="" />

    
       <Button
            android:id="@+id/addizione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numero2"
            android:layout_marginTop="46dp"
            android:text="+" />
       
        <Button
        android:id="@+id/sottrazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/addizione"
        android:layout_alignBottom="@+id/addizione"
        android:layout_toRightOf="@+id/addizione"
        android:text="-" />
        
        <Button
        android:id="@+id/moltiplicazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sottrazione"
        android:layout_alignBottom="@+id/sottrazione"
        android:layout_toRightOf="@+id/sottrazione"
        android:text="*" />
    
    <Button
        android:id="@+id/divisione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/moltiplicazione"
        android:layout_alignBottom="@+id/moltiplicazione"
        android:layout_toRightOf="@+id/moltiplicazione"
        android:text="/" />

    <!--  <Button
            android:id="@+id/Calcola"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divisione"
            android:layout_marginRight="18dp"
            android:layout_marginTop="30dp"
            android:layout_toLeftOf="@+id/risultato"
            android:text="Calcola" />  -->

   

        <Button
            android:id="@+id/lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/risultato"
            android:layout_alignLeft="@+id/numero2"
            android:text="LISTA" />  

        <EditText
            android:id="@+id/risultato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divisione"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:text="RISULTATO" >

            <requestFocus />
        </EditText>

</RelativeLayout>